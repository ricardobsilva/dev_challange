<p id="notice"><%= notice %></p>

<h1>Estudantes</h1>

<%= link_to 'novo aluno', new_student_path, class: "btn btn-primary btn-xs pull-right" %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>nome</th>
      <th>num. de reg</th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%=student.name %></td>
        <td><%=student.register_number %></td>
        <td><%=student.status == 1 ? "ativo" : "inativo"  %></td>
        <td><%= link_to 'editar', edit_student_path(student) %></td>
        <td><%= link_to 'deletar', student, method: :delete, data: { confirm: 'quer mesmo deletar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

