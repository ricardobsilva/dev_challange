<p id="notice"><%= notice %></p>

<h1>Cursos</h1>
<%= link_to 'novo curso', new_course_path, class: "btn btn-primary btn-xs pull-right" %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>nome</th>
      <th>descrição</th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description%></td>
        <td><%= course.status == 1? "ativo" : "inativo" %></td>
        <td><%= link_to 'editar', edit_course_path(course) %></td>
        <td><%= link_to 'deletar', course, method: :delete, data: { confirm: 'quer mesmo deletar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


